<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox fx:id="regVBox" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="RegistrationController">
    <TextField fx:id="login" promptText="Login" maxWidth="200">
    <VBox.margin>
            <Insets bottom = "10.0"/>
    </VBox.margin>
    </TextField>

    <TextField fx:id="password" promptText="Password" maxWidth="200">
        <VBox.margin>
            <Insets bottom = "10.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="nickname" promptText="Nickname" maxWidth="200">
        <VBox.margin>
            <Insets bottom = "10.0"/>
        </VBox.margin>
    </TextField>

    <Button onAction="#tryToRegister" prefWidth="200" text="Register">
    <VBox.margin>
        <Insets bottom = "10.0"/>
    </VBox.margin>
    </Button>

    <Label fx:id="result" alignment="CENTER" maxWidth="300"/>
</VBox>

